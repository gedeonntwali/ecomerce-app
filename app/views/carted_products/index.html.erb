<h1> All Products Added in Cart</h1>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-6">
  <h2>Your order: <%= @carted_products.last.order.user.name %></h2>
    <table class="table">
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price per Product</th>
      </tr>
      <% @carted_products.each do |carted_product| %>
        <tr>
          <td><%= carted_product.product.name %></td>
          <td><%= carted_product.quantity %></td>
          <td><%= carted_product.product.price %></td>
        </tr>
      <% end %>
    </table>
    <% button_to "Buy Now", "/order"
  </div>
</div>
