<h1> New Product </h1>
<ul>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <li class="model-errors"><%= message %></li> 
    <% end %>
  <% end %>
</ul>




<%= form_tag "/products", method: :post do%>
 <form> 
  <div class="form-group">
    Name: <input type="text" class="form-group" name="name">
  </div>

  <div class="form-group">
    Price: <input type="text" class="form-group" name="price">
  </div>

  <div class="form-group">
    Size: <input type="text" class="form-group" name="size">
  </div>


  <div class="form-group">
    Description: <input type="text" class="form-group" name="description">
  </div>

  <div class="checkbox">
    <input type="submit" class="btn btn-default" name="Create Product">
  </div>
</form>
<% end %>